# Show the first scratchpad window
bindsym $mod+Left sticky toggle

hide_edge_borders smart

mode "command" {
     # bindsym c exec i3-sensible-terminal; mode "default"
     # bindsym c exec xterm; mode "default"
     # bindsym e exec emacs; mode "default"

     bindsym z fullscreen toggle; mode "default"

     bindsym Return mode "default"
     bindsym Escape mode "default"
     bindsym Ctrl+g mode "default"
     # start dmenu (a program launcher)
     # bindsym $mod+d exec dmenu_run
     # There also is the (new) i3-dmenu-desktop which only displays applications
     # shipping a .desktop file. It is a wrapper around dmenu, so you need that
     # installed.
     bindsym $mod+d exec --no-startup-id i3-dmenu-desktop; mode "default"
     # bindsym d exec dmenu_run; mode "default"

     bindsym Tab focus next; mode "default"

     # alternatively, you can use the cursor keys:
     bindsym Left focus left
     bindsym Down focus down
     bindsym Up focus up
     bindsym Right focus right

     # alternatively, you can use the cursor keys:
     bindsym Shift+Left move left
     bindsym Shift+Down move down
     bindsym Shift+Up move up
     bindsym Shift+Right move right

     bindsym $mod+Left move workspace to output left
     bindsym $mod+Right move workspace to output right
     bindsym $mod+Up move workspace to output up
     bindsym $mod+Down move workspace to output down

     # split in horizontal orientation
     bindsym s split h; mode "default"
     # split in horizontal orientation
     bindsym $mod+5 split h; mode "default"

     # split in vertical orientation
     bindsym $mod+\' split v; mode "default"
     # split in vertical orientation
     bindsym Shift+s split v; mode "default"

     # enter fullscreen mode for the focused container
     bindsym f fullscreen; mode "default"

     # change container layout (stacked, tabbed, toggle split)
     bindsym $mod+s layout stacking; mode "default"
     bindsym $mod+w layout tabbed; mode "default"
     bindsym $mod+e layout toggle split; mode "default"

     # toggle tiling / floating
     bindsym Shift+space floating toggle; mode "default"

     # change focus between tiling / floating windows
     bindsym space focus mode_toggle; mode "default"

     # reload the configuration file
     bindsym Shift+c reload; mode "default"
}

set $mode_display Ext. Left (l), Ext. Right (r), Ext. Above (u), Ext. Below (d), Ext. Only (e), Internal Only (i)
mode "$mode_display" {
     bindsym l exec --no-startup-id xrandr --output DP-2 --primary --auto --left-of eDP-1 --output eDP-1 --auto; exec --no-startup-id xrandr --output HDMI-1 --auto --left-of eDP-1 --output eDP-1 --auto ; mode "default"
     bindsym d exec --no-startup-id xrandr --output DP-2 --primary --auto --below eDP-1 --output eDP-1 --auto; exec --no-startup-id xrandr --output HDMI-1 --primary --below eDP-1 --output eDP-1 --auto ; mode "default"
     bindsym u exec --no-startup-id xrandr --output DP-2 --primary --auto --above eDP-1 --output eDP-1 --auto; exec --no-startup-id xrandr --output HDMI-1 --primary --auto --above eDP-1 --output eDP-1 --auto ; mode "default"
     bindsym r exec --no-startup-id xrandr --output DP-2 --primary --auto --right-of eDP-1 --output eDP-1 --auto; exec --no-startup-id xrandr --output HDMI-1 --primary --auto --right-of eDP-1 --output eDP-1 --auto ; mode "default"
     bindsym e exec --no-startup-id xrandr --output DP-2 --primary --auto --output eDP-1 --off --output eDP-1 --auto; exec --no-startup-id xrandr --output HDMI-1 --primary --auto --output eDP-1 --off; mode "default"
     bindsym i exec --no-startup-id xrandr --output DP-2 --off --output eDP-1 --primary --auto --output eDP-1 --auto; exec --no-startup-id xrandr --output HDMI-1 --off --output eDP-1 --primary --auto; mode "default"
     bindsym Escape mode "default"
     bindsym Ctrl+g mode "default"
}
bindsym XF86Display mode "$mode_display"
bindsym $mod+d mode "$mode_display"

set $Locker xscreensaver-command -lock && sleep 1
set $mode_system Lock (l), Suspend (s), Reload (r), Restart (Shift+r), Exit (Shift+e)
mode "$mode_system" {
     bindsym l exec --no-startup-id $Locker; mode "default"
     bindsym s exec --no-startup-id $Locker && sleep 5 && systemctl suspend; mode "default"
     # reload the configuration file
     bindsym r reload; mode "default"
     # restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
     bindsym Shift+r restart; mode "default"
     # exit i3 (logs you out of your X session)
     bindsym Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"; mode "default"
     bindsym Escape mode "default"
     bindsym Ctrl+g mode "default"
}
bindsym $mod+s mode "$mode_system"

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym j resize shrink width 10 px or 10 ppt
        bindsym k resize grow height 10 px or 10 ppt
        bindsym l resize shrink height 10 px or 10 ppt
        bindsym semicolon resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        bindsym Shift+Left move workspace to output left; mode "default"
        bindsym Shift+Right move workspace to output right; mode "default"
        bindsym Shift+Up move workspace to output above; mode "default"
        bindsym Shift+Down move workspace to output below; mode "default"

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
	bindsym Ctrl+g mode "default"
}

set $mode_help Command (mod+x) Display (mod+d) System (mod+s) Windowing (mod+w) Resize (mod+r)
mode "$mode_help" {
     bindsym $mod+x mode "command"
     bindsym $mod+r mode "resize"
     bindsym $mod+d mode "$mode_display"
     bindsym $mod+s mode "$mode_system"
     bindsym $mod+w mode "$mode_windowing"

     # back to normal: Enter or Escape
     bindsym Return mode "default"
     bindsym Escape mode "default"
     bindsym Ctrl+g mode "default"
}
bindsym $mod+h mode "$mode_help"

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
    status_command i3status
    tray_output DP-2
    tray_output eDP-1
    tray_output HDMI-1
}
